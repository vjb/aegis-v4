{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
        "**/test/**/*.spec.ts"
    ],
    "moduleNameMapper": {
        "^viem$": "<rootDir>/node_modules/viem/index.js"
    },
    "transform": {
        "^.+\\.tsx?$": [
            "ts-jest",
            {
                "tsconfig": {
                    "module": "commonjs"
                }
            }
        ]
    }
}